set -o errexit
set -o nounset

readonly VIRTUALENV="dsub_libs"
readonly INSTALL_DIR="$(dirname "${0}")/../${VIRTUALENV}"
readonly COMMAND="${INSTALL_DIR}/bin/$(basename "${0}")"

if [[ ! -f "${COMMAND}" ]]; then
  echo 'Command not installed! Run "make install" and try again.'
  exit 1
fi

set +o nounset  # https://github.com/pypa/virtualenv/pull/922
source "${INSTALL_DIR}/bin/activate"
set -o nounset

exec "${COMMAND}" "${@}"
